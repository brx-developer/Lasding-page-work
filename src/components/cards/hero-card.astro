---
interface Props {
  title: string;
  p: string;
}

const { title, p } = Astro.props;
---

<div
  class="duration group mx-auto space-y-10 rounded-md bg-white p-10 py-14 shadow-[0px_15px_27px_16px_#00000024] hover:bg-secondary"
>
  <div class="*:size-16 *:text-secondary *:group-hover:text-white">
    <slot />
  </div>
  <div class="space-y-5">
    <h5 class="duration font-bold group-hover:!text-white">{title}</h5>
    <p class="duration group-hover:!text-white">
      {p}
    </p>
  </div>
</div>
